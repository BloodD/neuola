extends site

block append head
  link(rel='stylesheet', href=_('/stylesheets/article.css'))

block main-stage
  .main-stage-inner.article
    if post
      h1.title= post.title
      .info
        | by 
        span.author=  post.author.name
        | @ 
        span.date= post.date
      .text
        !{post.html}
    else
      p No content?

