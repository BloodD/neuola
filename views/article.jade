extends site

block append head
  link(rel='stylesheet', href='/stylesheets/article.css')

block main-stage
  .main-stage-inner.article
    if post
      h1.title= post.title
      .info
        | by 
        span.author=  post.author 
        |  @ 
        span.date= post.date
      .text
        :markdown
          !{post.body}
    else
      p No content?

  #uyan_frame
  script(type='text/javascript')
    var uyan_config = {
      du: 'test',
      su: '#{post.catalog}/#{post.getUrl()}'
    };
  script(
    src='http://v1.uyan.cc/js/iframe.js?UYUserId=1735456'
    async=''
  )#UYScript

